{
  "name": "review-on-save",
  "displayName": "Review On Save",
  "description": "Generative AI feature that performs code review upon file save",
  "version": "0.0.1",
  "publisher": "metalmental",
  "icon": "img/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Flupinochan/review-on-save.git"
  },
  "homepage": "https://github.com/Flupinochan/review-on-save",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "preview.button",
        "title": "Open Preview",
        "icon": "$(sparkle)"
      },
      {
        "command": "radio.select",
        "title": "Select Model"
      },
      {
        "command": "checkbox.toggle",
        "title": "Select Scope"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "preview.button",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "review-on-save",
          "title": "Review On Save",
          "icon": "$(sparkle)",
          "when": "true"
        }
      ]
    },
    "views": {
      "review-on-save": [
        {
          "id": "review-scope",
          "name": "Review Scope",
          "icon": "$(sparkle)"
        },
        {
          "id": "review-model",
          "name": "Model",
          "icon": "$(sparkle)"
        }
      ]
    },
    "configuration": {
      "title": "Review On Save Settings",
      "properties": {
        "reviewOnSave.model": {
          "type": "string",
          "default": "",
          "description": "Select the model to use for code review."
        },
        "reviewOnSave.apiEndpoint": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Enter your Ollama API endpoint."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile",
    "check-types": "tsc --noEmit",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "ollama": "^0.5.17"
  }
}
