{
  "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": "on",
      "complexity": "on",
      "correctness": "on",
      "nursery": "on",
      "performance": "on",
      "security": "on",
      "style": "on",
      "suspicious": "on"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "overrides": [
    {
      "includes": ["src/**/*.ts", "src/**/*.js"],
      "linter": {
        "rules": {
          "performance": {
            "noNamespaceImport": "off"
          },
          "correctness": {
            "noNodejsModules": "off",
            "noUndeclaredDependencies": "off",
            "useImportExtensions": "off"
          },
          "nursery": {
            "noUnnecessaryConditions": "off",
            "noUnresolvedImports": "off",
            "useExplicitType": "off"
          }
        }
      }
    }
  ]
}
